<!-- Views/Shared/_Layout.cshtml -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sri Sai College of IT and Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/StyleCollege.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top shadow">
            <div class="container">
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-university me-2"></i>
                    <span class="d-none d-md-inline">Sri Sai College</span>
                    <span class="d-md-none">SSC</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">
                                <i class="fas fa-info-circle me-1"></i>About
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Courses">
                                <i class="fas fa-book me-1"></i>Courses
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Announcements">
                                <i class="fas fa-bullhorn me-1"></i>Announcements
                            </a>
                        </li>

                        @if (User.IsInRole("Student"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-graduate me-1"></i>Student Portal
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Student" asp-action="Dashboard">
                                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Student" asp-action="Profile">
                                            <i class="fas fa-user me-2"></i>Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Student" asp-action="Results">
                                            <i class="fas fa-chart-bar me-2"></i>Results
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Student" asp-action="Attendance">
                                            <i class="fas fa-calendar-check me-2"></i>Attendance
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Student" asp-action="Exams">
                                            <i class="fas fa-file-alt me-2"></i>Exams
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("Teacher"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-chalkboard-teacher me-1"></i>Teacher Portal
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Teacher" asp-action="Dashboard">
                                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Teacher" asp-action="MySubjects">
                                            <i class="fas fa-book-open me-2"></i>My Subjects
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Teacher" asp-action="MarkAttendance">
                                            <i class="fas fa-check-square me-2"></i>Mark Attendance
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Teacher" asp-action="EnterResults">
                                            <i class="fas fa-edit me-2"></i>Enter Results
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-cogs me-1"></i>Admin Panel
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">
                                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Students">
                                            <i class="fas fa-user-graduate me-2"></i>Students
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Teachers">
                                            <i class="fas fa-chalkboard-teacher me-2"></i>Teachers
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Courses">
                                            <i class="fas fa-book me-2"></i>Courses
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Subjects">
                                            <i class="fas fa-book-open me-2"></i>Subjects
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Exams">
                                            <i class="fas fa-file-alt me-2"></i>Exams
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Announcements">
                                            <i class="fas fa-bullhorn me-2"></i>Announcements
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Reports">
                                            <i class="fas fa-chart-line me-2"></i>Reports
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                    </ul>

                    @* <partial name="_LoginPartial" /> *@
                </div>
            </div>
        </nav>
    </header>

    <main class="main-content">
        <div class="container py-4">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @RenderBody()
        </div>
    </main>

    <footer class="bg-dark text-light py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <h5 class="fw-bold text-primary mb-3">
                        <i class="fas fa-university me-2"></i>Sri Sai College
                    </h5>
                    <p class="text-muted">
                        Leading institution for IT and Management education,
                        preparing students for successful careers in technology and business.
                    </p>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-light"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-linkedin-in"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>

                <div class="col-lg-2 col-md-4 mb-4">
                    <h6 class="fw-bold mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted text-decoration-none">Admissions</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Academic Calendar</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Library</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Placements</a></li>
                    </ul>
                </div>

                <div class="col-lg-2 col-md-4 mb-4">
                    <h6 class="fw-bold mb-3">Courses</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted text-decoration-none">BCA</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">MCA</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">BBA</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">MBA</a></li>
                    </ul>
                </div>

                <div class="col-lg-4 col-md-4 mb-4">
                    <h6 class="fw-bold mb-3">Contact Info</h6>
                    <div class="text-muted">
                        <p><i class="fas fa-map-marker-alt me-2 text-primary"></i>123 Education Street, Knowledge City</p>
                        <p><i class="fas fa-phone me-2 text-primary"></i>+91 9876543210</p>
                        <p><i class="fas fa-envelope me-2 text-primary"></i>info@srisaicollege.edu.in</p>
                        <p><i class="fas fa-globe me-2 text-primary"></i>www.srisaicollege.edu.in</p>
                    </div>
                </div>
            </div>

            <hr class="border-secondary">

            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="text-muted mb-0">
                        &copy; @DateTime.Now.Year Sri Sai College of IT and Management. All rights reserved.
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="text-muted mb-0">
                        Developed by College IT Team
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/College.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>